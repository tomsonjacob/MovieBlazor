        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/nearmetheatre">
                <span class="oi oi-people" aria-hidden="true"></span> NearMe
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }
}