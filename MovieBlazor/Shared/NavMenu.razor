</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="#" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Movie
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/actor">
                <span class="oi oi-people" aria-hidden="true"></span> Actor
            </NavLink>
        </li>
        <li class="nav-item dropdown px-3">
            <a class="nav-link" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                <span class="oi oi-people" aria-hidden="true"></span>  Genres
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color:rgb(5, 39, 123)">
